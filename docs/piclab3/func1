@startuml
start
:Пользователь нажимает кнопку "Play";
if (Начать новую игру?) then (yes)
  :Инициализация игры;
  :Отображение игрового поля;
  :Генерация змейки и яблока;
  :Генерация препятствий и бомб;
  while (Игра активна?) is (да)
    :Отображение текущего состояния игры;
    :Обновление положения объектов на экране;
    :Получение пользовательского ввода;
  endwhile (нет)
  :Выйти из игры;
else (no)
  :Выйти из приложения;
endif
stop
@enduml