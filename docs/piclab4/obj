@startuml

object SnakeGame {
    gameWidth = 20
    gameHeight = 20
    snake = new Snake(startSegments, startDirection)
    apple = new Apple(position)
    obstacles = [new Obstacle(position1), new Obstacle(position2)]
    score = 0
    highScore = 0
    gameOver = false
}

object Snake {
    segments = [new Point(x1, y1), new Point(x2, y2)]
    direction = "UP"
}

object Apple {
    position = new Point(x, y)
}

object Obstacle {
    position1 = new Point(x1, y1)
    position2 = new Point(x2, y2)
}

object Point {
    x = 0
    y = 0
}

SnakeGame --> Snake : contains
SnakeGame --> Apple : contains
SnakeGame --> Obstacle : contains
Snake --> Apple : eats
Snake --> Obstacle : collides with

@enduml
