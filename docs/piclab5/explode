@startuml
state "Бомба" as Bomb {
    [*] --> Ожидание : инициализация
    Ожидание : Бомба не взорвана
    Ожидание --> Взрыв : взорваться()

    state Взрыв {
        [*] --> Начало : начатьВзрыв()
        Начало : Начало анимации взрыва

        Начало --> РисоватьВнешнийКрасныйКруг : рисоватьВнешнийКрасныйКруг()
        РисоватьВнешнийКрасныйКруг : Рисуем внешний красный круг
        РисоватьВнешнийКрасныйКруг --> РисоватьСреднийОранжевыйКруг : рисоватьСреднийОранжевыйКруг()
        РисоватьСреднийОранжевыйКруг : Рисуем средний оранжевый круг
        РисоватьСреднийОранжевыйКруг --> РисоватьВнутреннийЖелтыйКруг : рисоватьВнутреннийЖелтыйКруг()
        РисоватьВнутреннийЖелтыйКруг : Рисуем внутренний желтый круг
        РисоватьВнутреннийЖелтыйКруг --> РисоватьЦентральныйБелыйКруг : рисоватьЦентральныйБелыйКруг()
        РисоватьЦентральныйБелыйКруг : Рисуем центральный белый круг

        РисоватьЦентральныйБелыйКруг --> ПроверкаАнимации : увеличитьСчетчикАнимации()
        ПроверкаАнимации : Проверка состояния анимации

        ПроверкаАнимации --> Конец : анимацияЗавершена : счетчик >= 10
        Конец : Анимация завершена
        Конец --> Ожидание : сброс
        ПроверкаАнимации --> Начало : продолжитьАнимацию : счетчик < 10
    }
}
@enduml