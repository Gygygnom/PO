@startuml
:Змейка движется;
while (Игра активна?) is (Да)
    :Обновление положения змейки;
    if (Змейка съела яблоко?) then (Да)
        :Увеличение длины змейки;
        :Увеличение счета;
        if (Достигнут новый рекорд?) then (Да)
            :Обновление рекорда;
        endif
        :Генерация нового яблока;
    else (Нет)
        :Продолжить игру;
    endif
endwhile (Нет)
:Игра завершена;
@enduml
